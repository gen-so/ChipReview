@page "/{vendor}/{chip}"
@inject HttpClient Http


<PageTitle>@chip | Review</PageTitle>

<p>Chip : @chip</p>
<p>Vendor : @vendor</p>
<p>Rating : @vendor</p>


<p>Reviews</p>
@if (vendor == null)
{
    <p><em>Loading reviews...</em></p>
}
else
{
    <p>@message</p>
   
}

